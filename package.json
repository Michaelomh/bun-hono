{
  "name": "bun-hono",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "bun run lint --fix",
    "db:generate": "drizzle-kit generate",
    "db:local:migrate": "wrangler d1 migrations apply --local 'bun-hono-d1'",
    "db:local:studio": "drizzle-kit studio --config=drizzle.config.local.ts",
    "db:local:reset": "rm -rf .wrangler/state/v3/d1/",
    "db:prod:migrate": "wrangler d1 migrations apply --remote 'bun-hono-d1'",
    "db:prod:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.0",
    "@libsql/client": "^0.15.14",
    "@scalar/hono-api-reference": "^0.9.16",
    "dotenv": "^17.2.2",
    "dotenv-expand": "^12.0.3",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.5",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "wrangler": "^4.4.0"
  }
}
