{
  "name": "bun-hono",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "lint": "eslint .",
    "lint:fix": "bun run lint --fix",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:local-up": "wrangler d1 migrations apply --local 'bun_hono_d1'",
    "db:prod-up": "wrangler d1 migrations apply --remote 'bun_hono_d1'",
    "db:up": "drizzle-kit up:sqlite",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "drizzle-kit studio --config=drizzle.config.local.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.0",
    "@libsql/client": "^0.15.14",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.5",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@cloudflare/workers-types": "^4.20250831.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "wrangler": "^4.4.0"
  }
}
